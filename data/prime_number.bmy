@ program to find if a number is prime or not @
start
    var n;
    var c;
    var flag;
    c = 2;
    flag = 0;
    show *Enter a number*;
    input n;
    when c <= n-1
        repeat 
            incase n mod 2 :=: 0
     			do
					flag = 1;
     			otherwise
        			flag = 0;
   			endcase
            c = c + 1;
        endrepeat
incase flag :=: 0
      do
         show *The number is prime*;
      otherwise
         show *The number is not prime*;
endcase
stop
