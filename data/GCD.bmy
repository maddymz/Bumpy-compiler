@ program to find gcd of two numbers @
start 
    var n1;
    var n2;
    show *Enter two numbers to calculate GCD*;
    input n1;
    input n2;

		when n1 ~= n2
     	  repeat
            incase n1 > n2
     			do
        			n1 = n1 - n2;
     			otherwise
        			n2 = n2 - n1;
    		endcase
          endrepeat
     show *GCD is*;
     show n1;
stop
